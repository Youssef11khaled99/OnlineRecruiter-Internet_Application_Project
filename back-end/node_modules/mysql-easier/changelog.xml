  <changeSet id="1" author="Mark Volkmann">
    <createIndex
      catalogName="demo"
      schemaName="demo"
      tableName="ice_cream"
      indexName="idx_ice_cream"
      unique="true"
    >
      <column name="id" type="int"/>
    </createIndex>
    <addAutoIncrement
      catalogName="demo"
      schemaName="demo"
      tableName="ice_cream"
      columnName="id"
      columnDataType="int"
      incrementBy="1"
      startWith="1"
    />
    <renameColumn
      tableName="ice_cream"
      oldColumnName="name"
      newColumnName="flavor"
      columnDataType="text"
    />
    <addColumn tableName="ice_cream">
      <column name="available" type="boolean" defaultValueBoolean="true"/>
    </addColumn>
  </changeSet>

